# ======================
# CORE
# ======================
ENV=development
PROJECT_NAME=Aura_Orchestra

# ======================
# DATABASE
# ======================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aura_orchestra
POSTGRES_USER=aura_admin
POSTGRES_PASSWORD=change_me_securely
DATABASE_URL=postgres://aura_admin:change_me_securely@postgres:5432/aura_orchestra

# ======================
# MANAGER SERVICE
# ======================
MANAGER_PORT=8000
MANAGER_API_KEY=local-dev-only

# ======================
# MODEL PROVIDERS
# ======================
OLLAMA_BASE_URL=http://host.docker.internal:11434
OPENAI_API_KEY=
GEMINI_API_KEY=

# ======================
# SECURITY
# ======================
AUDIT_LOG_RETENTION_DAYS=365
ENABLE_STRICT_POLICY=true
DIRECTOR_API_KEY=replace_with_strong_key

# ======================
# MCP
# ======================
MCP_PORT=5001

# ======================
# UI
# ======================
UI_PORT=3000

# ======================
# SANDBOX
# ======================
SANDBOX_BASE=./sandboxes
